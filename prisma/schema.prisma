generator client {
    provider = "prisma-client-js" 
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Order {
    id              Int         @id @default(autoincrement())
    storeId         Int
    notes           String?
    datetime        String
    total           Float

    paymentType     String?
    installments    Int?

    userId          Int    
    user            User        @relation(fields: [userId], references: [id])

    products        OrderProduct[]
}

model OrderProduct {
    id              Int         @id @default(autoincrement())
    name            String
    price           Float
    quantity        Int
    referenceId     Int         @default(1)

    orderId         Int         
    order           Order       @relation(fields: [orderId], references: [id])
}

model User {
    id              Int         @id @default(autoincrement())
    password        String?
    name            String
    lastname        String
    cpf             String      @unique
    company         String?
    postcode        String
    address         String
    number          String
    district        String
    complement      String?
    city            String
    state           String
    phone           String
    email           String      @unique

    profilePicUrl   String      @default("") @db.Text

    orders          Order[]
}

model Newsletter {
    id          Int         @id @default(autoincrement())
    name        String
    email       String
}